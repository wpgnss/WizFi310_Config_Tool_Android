<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/color_default_page"
    android:layout_height="match_parent">

    <!-- WizFi310 -->
    <!--title-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/option_title_wizfi310"
        android:background="#c8c8c8"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.03" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >
            <!--wizfi310 ssid-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WizFi310 SSID"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/txt_wizfi310_ssid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtbox_default_font_size"
                android:inputType="textShortMessage" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <!--wizfi310 pass-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WizFi310 PASSWORD"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/txt_wizfi310_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtbox_default_font_size"
                android:inputType="textShortMessage" />
        </LinearLayout>
    </LinearLayout>

    <!---->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >
            <!--aircmd ip -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aircmd IP"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/txt_aircmd_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtbox_default_font_size"
                android:inputType="phone|number" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <!--aircmd port-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aircmd Port "
                android:textStyle="bold" />
            <EditText
                android:id="@+id/txt_aircmd_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtbox_default_font_size"
                android:inputType="number" />
        </LinearLayout>
    </LinearLayout>


    <!-- WizFi310. -->
    <!--title-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/option_title_ap"
        android:textAlignment="center"
        android:background="#c8c8c8"
        android:textSize="15dp"
        android:textStyle="bold" />
    <!-- ap information -->
    <!---->

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.03" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.02">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <!--ap ssid-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AP SSID"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/txt_apname_ssid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtbox_default_font_size"
                android:inputType="textShortMessage" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >
            <!--ap pass-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AP PASSWORD"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_apname_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtbox_default_font_size"
                android:inputType="textShortMessage" />
        </LinearLayout>
    </LinearLayout>

    <!--title-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/option_title_server"
        android:textAlignment="center"
        android:background="#c8c8c8"
        android:textSize="15dp"
        android:textStyle="bold" />
    <!-- ap information -->
    <!---->

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.03" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.02">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >
            <!--aircmd ip -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Server IP"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/txt_dest_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtbox_default_font_size"
                android:inputType="phone|number" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <!--aircmd port-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Server Port"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/txt_dest_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="@dimen/txtbox_default_font_size" />
        </LinearLayout>
    </LinearLayout>

    <!-- ap information. -->


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <CheckBox
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="SSL_Enable"
            android:id="@+id/checkbox_ssl_enable"
            android:checked="false"
            android:textStyle="bold" />

        <CheckBox
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Datamode_Enable"
            android:id="@+id/checkbox_datamode_enable"
            android:checked="false"
            android:textStyle="bold" />
    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/res_btn_SAVE"
        android:id="@+id/btn_config"
        android:layout_gravity="center_horizontal"
        android:textColor="#1b1a1a"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.11" />

</LinearLayout>